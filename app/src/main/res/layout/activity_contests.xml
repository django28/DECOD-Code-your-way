<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.amit.project.contests">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:background="@drawable/bacj">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/amit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lp"
        android:textSize="34dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />
            <View
                android:id="@+id/line"
                android:layout_below="@+id/amit1"
                android:layout_width="250dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/colorHighlight"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/kakaka"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
        android:layout_below="@+id/line"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main"
        android:textColor="#000000"
        />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_below="@+id/kakaka"
                android:layout_marginLeft="25dp"
                android:id="@+id/card_view2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                card_view:cardCornerRadius="4dp"
                />

            <ImageView
                android:id="@+id/cc"
                android:layout_below="@+id/kakaka"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/cc"/>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_marginLeft="180dp"
                android:layout_below="@+id/kakaka"
                android:id="@+id/card_view3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                card_view:cardCornerRadius="4dp"

                />

            <ImageView
                android:layout_below="@+id/kakaka"
                android:id="@+id/he"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:layout_marginLeft="185dp"
                android:src="@drawable/cf"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_below="@+id/card_view2"
                android:id="@+id/card_view4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="25dp"
                card_view:cardCornerRadius="4dp"

                />

            <ImageView
                android:id="@+id/sj"
                android:layout_below="@+id/card_view3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/sjj"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_below="@+id/card_view2"
                android:id="@+id/card_view5"
                android:layout_marginLeft="180dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                card_view:cardCornerRadius="4dp"
                />

            <ImageView
                android:id="@+id/tc"
                android:layout_below="@+id/card_view2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="185dp"
                android:src="@drawable/tc"/>

        </RelativeLayout>
    ></ScrollView>
</RelativeLayout>
